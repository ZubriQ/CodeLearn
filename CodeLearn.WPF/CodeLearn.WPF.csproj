<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\CodeLearn.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4-beta1.22518.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="4.4.0-4.final" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CodeLearn.Db\CodeLearn.Db.csproj" />
    <ProjectReference Include="..\CodeLearn.Lib\CodeLearn.Lib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\CodeLearn.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Page Update="Templates\Button_Theme.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Templates\Description_Theme.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Templates\ThemeColours.xaml">
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>
