<Window x:Class="CodeLearn.WPF.Windows.Student.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeLearn.WPF.Windows.Student"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="1020"
        MinWidth="490"
        WindowState="Maximized"
        ResizeMode="NoResize"
        >
    <ScrollViewer Background="#f5f5f7">
        <Grid x:Name="MainHomeWindowGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"
                               MinHeight="100"
                               />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border>
                <Image Source="/Images/CodeLearn.png"
                       Margin="0,30,0,60"
                       MaxHeight="142"
                       MinWidth="980"/>
            </Border>

            <Frame x:Name="HomeWindowFrame"
                   Source="Pages/SelectCoursePage.xaml"
                   Grid.Row="1">

            </Frame>
        </Grid>
    </ScrollViewer>
</Window>
