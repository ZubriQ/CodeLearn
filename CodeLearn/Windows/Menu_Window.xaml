<Window x:Class="CodeLearn.Windows.Menu_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeLearn.Windows"
        mc:Ignorable="d"
        Title="Menu" Height="80" Width="240">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="btn_CreateExercise"
                Content="Create Exercise"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Template="{StaticResource Button}"
                Click="btn_CreateExercise_Click" />
        <Button x:Name="btn_DoExercise"
                Grid.Column="1"
                Content="Do Exercise"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Template="{StaticResource Button}"
                Click="btn_DoExercise_Click" />
    </Grid>
</Window>
